- breadcrumb :users_show, @user
- content_for(:title, '社員詳細')

.headline 基本情報

%table.vertical-table.mb-3
  %tbody
    %tr
      %th 社員番号
      %td= @user.employee_number.to_s.rjust(4, '0')
    %tr
      %th 名前
      %td= @user.full_name
    %tr
      %th 入社日
      %td= @user.date_of_hire
    %tr
      %th 退職日
      %td= @user.date_of_termination || "-"

.d-flex.gap-2
  = link_to '戻る', users_path, class: 'btn btn-secondary'
  = link_to '編集',  edit_user_path(@user), class: 'btn btn-primary'# 編集

