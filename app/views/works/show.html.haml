.work_show
  %nav
    %ol.breadcrumb
      %li
        %a{href: home_users_path} ホーム
      %li
        %a{href: user_path(current_user.id)} ユーザ詳細
      %li 勤務詳細
  .fs-2.page-title.fw-bold.mb-3 勤務詳細

  %div.tables-container
    // 出勤と休憩
    .d-flex
      %div.me-4
        .fs-5 出勤
        .border-top.pt-4.border-2
        %table.table.table-bordered
          %thead
            %tr
              %th 出勤時間
              %th 退勤時間
          %tbody
            %tr
              %td
                .d-flex
                  .date= formatted_date_with_weekday(@work.start_datetime)
                  .time.mx-1= formatted_time_only(@work.start_datetime)
              %td
                .d-flex
                  .date=formatted_date_with_weekday(@work.end_datetime)
                  .time.mx-1= formatted_time_only(@work.end_datetime)
      %div
        .fs-5 休憩
        .border-top.pt-4.border-2

        %table.table.table-bordered
          %thead
            %tr
              %th
              %th 休憩開始時間
              %th 休憩終了時間
            - @breaks.each_with_index do |break_time, index|
              %tbody
                %tr
                  %td= index+1
                  %td
                    .d-flex
                      .date=formatted_date_with_weekday(break_time.start_datetime)
                      .time.mx-1= formatted_time_only(break_time.start_datetime)
                  %td
                    .d-flex
                      .date=formatted_date_with_weekday(break_time.end_datetime)
                      .time.mx-1= formatted_time_only(break_time.end_datetime)
    // 合計
    %div
      .fs-5 合計
      .border-top.pt-4.border-2

      %table.table.table-bordered
        %thead
          %tr
            %th 実労働時間
            %th 合計休憩時間
            %th 残業時間

        %tbody
          %tr.align-middle
            %td= minutes_to_hours_and_minutes(@work.actual_work_time_in_minutes)
            %td= minutes_to_hours_and_minutes(@work.total_break_time_in_minutes)
            %td= minutes_to_hours_and_minutes(@work.total_overtime_in_minutes)
