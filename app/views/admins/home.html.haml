管理者用ホーム
= form_with url: admin_home_path, method: :get, local: true do
  %label 絞り込み:
  = select_tag :filter, options_for_select([["全社員", "all"], ["在職中", "active"], ["退職済", "retired"]], params[:filter] || "all"), onchange: 'this.form.submit()'

%table
  %thead
    %tr
      %th 社員番号
      %th 名前
      %th 入社日
      %th 退職日
  %tbody
    - @users.each do |user|
      %tr
        %td= user.employee_number.to_s.rjust(4, '0')
        %td= user.full_name
        %td= user.date_of_hire
        %td= user.date_of_termination ? user.date_of_termination : "-"
