%nav
  %ol.breadcrumb
    %li
      %a{href: admin_home_path} ホーム
    %li ユーザー詳細
%dl
  %dt 社員番号
  %dd= @user.employee_number.to_s.rjust(4, '0')
  %dt 名前
  %dd= @user.full_name
  %dt 入社日
  %dd= @user.date_of_hire
  %dt 退職日
  %dd= @user.date_of_termination || "-"
  %dt
  %dd

- if @attendances
  - @attendances.each do |attendance|
    %tr
      %td= formatted_time_only(attendance.check_in_datetime)
      -if attendance.check_out_datetime
        %td= formatted_time_only(attendance.check_out_datetime)
